  buttonDesign(choice21Button);

  choice22Button = createButton("Hide Your Identity, Pretend Uou Are An AI");
  choice22Button.position(550, 270);
  choice22Button.mousePressed(() => operationTwo2());
  buttonDesign(choice22Button);
}

